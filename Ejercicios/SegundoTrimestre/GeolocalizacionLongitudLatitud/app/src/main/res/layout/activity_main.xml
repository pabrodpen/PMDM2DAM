<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/latitudEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Latitud"/>

    <EditText
        android:id="@+id/longitudEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/latitudEditText"
        android:layout_marginTop="16dp"
        android:hint="Longitud"/>

    <Button
        android:id="@+id/mostrarMapaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/longitudEditText"
        android:layout_marginTop="16dp"
        android:text="Mostrar Mapa"/>

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mostrarMapaButton"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:visibility="visible"/>

</RelativeLayout>
